                            <ul>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam ac dui</ul>
                            <ul>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam ac dui</ul>
                        </nav>
                    </div>
                </div>
            </div>
            <div>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam ac dui</p>
            </div>
            <div>
                &copy; 2024 - Turbokart.Web - <a asp-area="" asp-page="/Privacy">Om os</a>
            </div>
        </div>
    </footer>

    <script src="~/_content/Turbokart.SharedWebComponents/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/_content/Turbokart.SharedWebComponents/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/_content/Turbokart.SharedWebComponents/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>